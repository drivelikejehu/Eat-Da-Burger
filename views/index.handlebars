<h1>Burger Time!</h1>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}} <button class="devour-burger" data-id="{{id}}">Devour It!</button></li>
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Name of burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
